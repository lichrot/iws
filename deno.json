{
  "version": "1.1.0",
  "license": "Apache-2.0",
  "workspace": ["./jsr", "./npm"],
  "compilerOptions": {
    "lib": ["ESNext", "dom", "dom.iterable", "dom.asynciterable", "deno.ns"]
  },
  "tasks": {
    "dry-run:jsr": "cd ./jsr && deno publish --dry-run --allow-dirty",
    "dry-run:npm": "cd ./npm && npm publish --dry-run --allow-dirty",
    "dry-run": "deno task dry-run:jsr && deno task dry-run:npm",
    "prepare": "deno fmt && deno task dry-run",
    "publish:jsr": "cd ./jsr && deno publish",
    "publish:npm": "cd ./npm && npm publish --access=public",
    "publish": "deno task publish:jsr && deno task publish:npm"
  }
}
